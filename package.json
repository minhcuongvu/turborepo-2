{
  "name": "turborepo-2",
  "private": true,
  "scripts": {
    "with-env-local": "dotenv -e ./.env.local --",
    "build": "turbo build",
    "dev": "yarn with-env-local turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.6",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
